@*appsettings.json 파일의 내용을 레이아웃 페이지에 주입해서 사용하기*@
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 닷넷노트</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
    <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>

    <link href="~/lib/animate.css/animate.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <script src="~/lib/moment/min/moment-with-locales.js"></script>
    <script>
        moment.locale('ko');
    </script>

    <!-- 기본 JavaScript 라이브러리 참조 시작 -->
    <script src="~/lib_/jquery/dist/jquery.js"></script>
    <script src="~/lib_/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- 기본 JavaScript 라이브러리 참조 종료 -->

    <script src="~/lib/angular/angular.js"></script>

    <!-- 페이저 관련 CSS-->
    <link href="~/css/memoengine.pager.css?aaaa" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle"
                        data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home"
                   asp-action="Index" class="navbar-brand">닷넷노트</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a asp-area="" asp-controller="Home"
                           asp-action="Index">Home</a>
                    </li>
                    <li>
                        <a href="/BuildSeoul" style="font-weight: bold;color: yellow;">빌드2019</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="DotNetNote"
                           asp-action="Index">게시판</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="WebCamp"
                           asp-action="Index">웹캠프</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="CommunityCamp"
                           asp-action="Index">커뮤니티캠프</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Home"
                           asp-action="About">정보</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Home"
                           asp-action="Contact">연락처</a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle"
                           data-toggle="dropdown">예제<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a asp-controller="Urls"
                                   asp-action="Index">
                                    도메인 관리자
                                </a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a asp-controller="RouteDemo"
                                   asp-action="Index">어트리뷰트 라우팅</a>
                            </li>
                            <li>
                                <a asp-controller="Data"
                                   asp-action="Index">MVC 주요 기능</a>
                            </li>
                            <li>
                                <a asp-controller="RazorDemo"
                                   asp-action="Demo1">Razor 구문 1</a>
                            </li>
                            <li>
                                <a asp-controller="RazorDemo"
                                   asp-action="Demo2">Razor 구문 2</a>
                            </li>
                            <li>
                                <a asp-controller="HelperMethodDemo"
                                   asp-action="Index">헬퍼 메서드</a>
                            </li>
                            <li>
                                <a asp-controller="Demo"
                                   asp-action="ViewWithModelDemo">
                                    모델 형식으로 전송된 데이터 받기
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Demo"
                                   asp-action="ViewWithListOfDemo">
                                    컬렉션 형태로 전송된 데이터 받기
                                </a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a asp-controller="FormValidationDemo"
                                   asp-action="Index">폼 유효성 검사</a>
                            </li>
                            <li>
                                <a asp-controller="TagHelperDemo"
                                   asp-action="Index">태그 헬퍼</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a asp-controller="SingletonDemo"
                                   asp-action="Index">Singleton Demo</a>
                            </li>
                            <li>
                                <a asp-controller="SingletonDemo"
                                   asp-action="ConstructorInjectionDemo">생성자 주입</a>
                            </li>
                            <li>
                                <a asp-controller="DependencyInjectionDemo"
                                   asp-action="Index">인터페이스를 사용한 생성자 주입으로 DI 구현하기</a>
                            </li>
                            <li>
                                <a asp-controller="DependencyInjectionDemo"
                                   asp-action="About">인터페이스를 사용한 생성자 주입으로 DI 구현하기</a>
                            </li>
                            <li>
                                <a asp-controller="DependencyInjectionDemo"
                                   asp-action="AtInjectDemo">@@inject 구문으로 뷰 페이지에 직접 주입하기</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a asp-controller="StronglyTypedConfiguration"
                                   asp-action="Index">강력한 형식의 환경 설정</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a asp-controller="LoggingDemo"
                                   asp-action="Index">로깅(Logging)</a>
                            </li>
                            <li>
                                <a asp-controller="ViewComponentDemo"
                                   asp-action="Index">뷰 컴포넌트</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a asp-controller="Tech"
                                   asp-action="Index">
                                    Web API - 기술 목록(with Angular)
                                </a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="~/Maxim/Default.html">
                                    명언 서비스
                                </a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a asp-controller="RecruitManager"
                                   asp-action="Index">
                                    모집 관리자
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle"
                           data-toggle="dropdown">
                            <strong>책</strong><b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a asp-controller="Guide" asp-action="Index">
                                    학습 가이드
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Errata" asp-action="Index">
                                    정오표
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - DotNetNote(닷넷노트)</p>
            <p><em>Creator: @Configuration["Creator"] </em></p>
            <p class="text-center"><em><a href="https://www.dotnetkorea.com/" target="_blank">닷넷코리아(https://www.dotnetkorea.com/)</a></em></p>
        </footer>
    </div>

    <script src="~/src/bs3/jquery/dist/jquery.js"></script>
    <script src="~/src/bs3/bootstrap/dist/js/bootstrap.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
